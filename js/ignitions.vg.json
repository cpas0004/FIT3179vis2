{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Classifications of Bushfire Ignitions Since 2000",
        "fontSize": 16
    },
    "width": 275,
    "height": 275,
    "background": "#f9f0db",
    "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/data/ignition.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "calculate": "format(datum.Percent, '.0f') + '%'", 
            "as": "FormattedPercent"
        }
    ],
    "encoding": {
                "theta": {"field": "Percent", "type": "quantitative", "stack": true},
                "color": {
                    "field": "Cause", 
                    "type": "nominal", 
                    "scale": {
                        "range": ["#c9462a", "#d2a665", "#652b22", "#90ae85",  "#fca404", "#a3512f"]
                    },
                    "legend": null
                },
                "order": {"field": "Percent", "type": "quantitative", "sort": "descending"}
    },
    "layer": [
        {
            "mark": {
                "type": "arc",
                "outerRadius": 160
            }
        },
        {
            "mark": {
                "type": "text", 
                "radius": 180,
                "fontSize": 16
            },
            "encoding": {
                "text": {
                    "field": "Cause", 
                    "type": "nominal"
                }
            }
        },
        {
            "mark": {
                "type": "text", 
                "radius": 120,
                "fontSize": 16
            },
            "encoding": {
                "text": {
                    "field": "FormattedPercent", 
                    "type": "nominal"
                },
                "color": {"value": "white"}
            }
        }
        
    ]
}