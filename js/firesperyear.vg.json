{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Number of Recorded Fires Per State Per Year Since 1965",
        "fontSize": 23,
        "anchor": "start",
        "dy": -28
    },
    "background": "#f9f0db",
    "config": {"font": "Rubik"},
    "data": {
      "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/data/firesperyeardata.csv"
    },
    "vconcat": [
      {
        "width": 1400,
        "height": 300,
        "mark": "area",
        
        "encoding": {
          "x": {
            "field": "year",
            "type": "temporal", 
            "timeUnit": "year",
            "scale": {"domain": {"param": "time_brush"}},
            "axis": {"title": "",  "grid": false, "format": "%Y"}
          },
          "y": {
            "field": "fires",
            "type": "quantitative",
            "title": "Count of Fires",
            "stack": "zero",
            "axis": {"titleFontSize": 14}
          },
          "color": {
            "field": "state",
            "scale": {
              "range": ["#ac545c", "#c9462a", "#652b22", "#90ae85", "#d28260", "#d2a665", "#fca404"]
            },





            "legend": {
              "title": "State",
              "titleFontSize": 16,
              "labelFontSize": 14,
              "orient": "top-left"
            }
          }
        }
      },
      {
        "width": 1400,
        "height": 60,
        "mark": {
          "type": "line",
          "color": "#a3512f" 
        },
        "params": [
          {
            "name": "time_brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {
            "field": "year",
            "type": "temporal", 
            "timeUnit": "year",
            "axis": {"title": "", "format": "%Y"}
          },
          "y": {
            "field": "fires",
            "aggregate": "sum",
            "axis": null,
            "title": ""
          }
        }
      }
    ]
  }