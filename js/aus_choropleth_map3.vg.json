{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "% of Each State Damaged by Bushfires in the 2019/20 Summer",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},

  "layer": [
    {
      
      "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/js/states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.STATE_NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/data/area_burned_data.csv"
            },
            "key": "State",
            "fields": ["Size", "Burned"]
          }
        },
        {"calculate": "datum['Burned']/datum['Size'] * 100", "as": "% of State Damaged by Fires"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": null   
      },
      "encoding": {
        "color": {
          "field": "% of State Damaged by Fires",
          "type": "quantitative",
          "title": "%",
          "scale": {
            "type": "threshold",
            "domain": [1, 5, 10],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
          {"field": "% of State Damaged by Fires", "type": "quantitative", "format": ".2f"},
          {"field": "Burned", "type": "quantitative", "title": "Total area burned in km^2", "format": ".0f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/js/states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",        
        "strokeWidth": 0.5          
      },
      "encoding": {
        "color": {"value": null}  
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/data/top50.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "area_km",
          "type": "quantitative",
          "title": "Area in km^2",
          "scale": {"domain": [100, 6000]}
        },
        "color": {
          "field": "area_km",
          "type": "quantitative",
          "title": "Area in km^2",
          "scale": {"scheme": "yellowgreen"}
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cpas0004/FIT3179vis2/main/js/ne_110m_graticules_5.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "stroke": "darkgray", "strokeWidth":0.5}
    }
  ]
}